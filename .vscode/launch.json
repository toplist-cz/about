{
    "configurations": [
        {
            "name": "Hugo",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "env": {
                "HUGO_ENV": "development"
            },
            "runtimeExecutable": "hugo",
            "args": [
                "server",
                "--disableFastRender"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "serverReadyAction": {
                "pattern": "Running on http://0.0.0.0:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
              }
        }
    ]
}